<?xml version="1.0" encoding="UTF-8"?>
<coc:creature id="crocodile" type="beast"
	xmlns:coc="https://github.com/dwugofski/rpgml/coc"
	xmlns="https://github.com/dwugofski/rpgml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://github.com/dwugofski/rpgml ../coc.creature.xsd"
	>

	<name>Crocodile</name>
	<coc:subname>Nile</coc:subname>
	<coc:characteristics>
		<coc:char name="strength">
			<coc:chance>130</coc:chance>
			<roll>(4d6+12)x5</roll>
		</coc:char>
		<coc:char name="constitution">
			<coc:chance>90</coc:chance>
			<roll>(3d6+8)x5</roll>
		</coc:char>
		<coc:char name="size">
			<coc:chance>130</coc:chance>
			<roll>(4d6+12)x5</roll>
		</coc:char>
		<coc:char name="dexterity">
			<coc:chance>35</coc:chance>
			<roll>(2d6)x5</roll>
		</coc:char>
		<coc:char name="power">
			<coc:chance>50</coc:chance>
			<roll>(3d6)x5</roll>
		</coc:char>
	</coc:characteristics>
	<coc:hitpoints>
		<int>22</int>
	</coc:hitpoints>
	<coc:damage-bonus>
		<roll>2d6</roll>
	</coc:damage-bonus>
	<coc:build>
		<int>3</int>
	</coc:build>
	<coc:move>
		<int>6</int>
		<coc:alternate>
			<name>swimming</name>
			<int>8</int>
		</coc:alternate>
	</coc:move>
	<coc:attacks>
		<int>1</int>
	</coc:attacks>
	<coc:specials>
		<coc:special>
			<name>Fighting attacks</name>
			<description>
				<p>The main danger of course is their bite, but a large one can thrash around and cause impact damage.</p>
			</description>
		</coc:special>
		<coc:special type="maneuver">
			<name>Bite and hold</name>
			<description>
				<p>Vicious jaws; once they have hold they are unlikely to let go and may drag their victims underwater to drown.</p>
			</description>
		</coc:special>
	</coc:specials>
	<coc:fighting>
		<coc:chance>50</coc:chance>
		<coc:effect>
			<roll><var ref="dmg_bonus"/></roll> damage
		</coc:effect>
	</coc:fighting>
	<coc:maneuvers>
		<coc:maneuver>
			<name>Bite and hold</name>
			<description>
				<p>damage <roll>1d10+<var ref="dmg_bonus"/></roll>, followed by <roll><var ref="dmg_bonus"/></roll> each round while held (or drowning)</p>
			</description>
		</coc:maneuver>
	</coc:maneuvers>
	<coc:dodge>
		<coc:chance>17</coc:chance>
	</coc:dodge>
	<coc:armor>
		<name>hide</name>
		<int>5</int>
	</coc:armor>
	<coc:skills>
		<coc:skill>
			<name>stealth</name>
			<coc:chance>60</coc:chance>
			<modifier>in water 80%</modifier>
		</coc:skill>
	</coc:skills>
	<coc:habitat>
		<p>Tropics, espcially saltwater jungle marshes worldwide</p>
	</coc:habitat>
</coc:creature>